//
  Create tabs with an icon and label, using the tabs-positive style.
  Each tab's child <ion-nav-view> directive will have its own
  navigation history that also transitions its views in and out.
ion-tabs.tabs-icon-top.tabs-color-active-energized
  // Discovery Tab
  ion-tab(title='发现', icon-off='ion-ios-navigate-outline', icon-on='ion-ios-navigate', href='#/tab/404')
    ion-nav-view(name='tab-404')
  // ClockIn Tab
  ion-tab(title='打卡', icon-off='ion-ios-bookmarks-outline', icon-on='ion-ios-bookmarks', href='#/tab/404')
    ion-nav-view(name='tab-404')
  // Chats Tab
  ion-tab(title='消息', icon-off='ion-ios-chatboxes-outline', icon-on='ion-ios-chatboxes', href='#/tab/404')
    ion-nav-view(name='tab-404')
  // Account Tab
  ion-tab(title='我', icon-off='ion-ios-person-outline', icon-on='ion-ios-person', href='#/tab/user-center')
    ion-nav-view(name='tab-user-center')
