ion-view.view-user-center(view-title='个人中心' ng-if="userId")
  ion-content#user_center
    ion-list
      ion-item.item-avatar.item-icon-right(href='#/tab/user-detail/{{user.userId}}')
        img(src='{{ user.headImage }}')
        |         
        h2 {{ user.nickName }}
        |         
        p.normal-p {{ user.intro }}
        |         
        i.icon.ion-chevron-right
      |       
      ion-item.item.no-top-padding.no-bottom-padding
        .row
          .col.text-center
            .statistic
              a(ng-href='#/tab/user-groups/{{user.userId}}')
                .value
                  | {{ user.totalGroup }}
                .label
                  | 小组
          |           
          .col.text-center
            .statistic
              a(ng-href='#/tab/user-rank/{{user.userId}}')
                .value
                  | {{ user.num }}
                .label
                  | 排名
          |           
          .col.text-center
            .statistic
              a(ng-href='#/tab/user-score/{{user.userId}}')
                .value
                  | {{ user.score }}
                .label
                  | 积分
      |       
      ion-item.item-divider.custom-rewrite
      |       
      .card-table
        .row.card-table-row.no-padding
          .col.no-padding
            .card-table-cell
              a.item.item-thumbnail(href="#/tab/user-punch/{{user.userId}}")
                img(src='src/img/icon_check_in.png')
                |             
                h2 连续打卡
                |             
                p(ng-if="user.totalPunch") {{ user.totalPunch }} 天
                p(ng-if="!user.totalPunch") 无
          |         
          .col.no-padding
            .card-table-cell
              a.item.item-thumbnail(href="#/tab/user-read/{{user.userId}}")
                img(src='src/img/icon_read_books.png')
                |             
                h2 累计读书
                |             
                p(ng-if="user.totalRead") {{ user.totalRead }} 本
                p(ng-if="!user.totalRead") 无
        |       
        .row.card-table-row.no-padding
          .col.no-padding
            .card-table-cell
              a.item.item-thumbnail(href="#/tab/user-remark/{{user.userId}}")
                img(src='src/img/icon_book_reviews.png')
                |             
                h2 累计书评
                |             
                p(ng-if="user.totalRemark") {{  user.totalRemark }} 条
                p(ng-if="!user.totalRemark") 无
          |         
          .col.no-padding
            .card-table-cell
              a.item.item-thumbnail(href="#/tab/user-comming")
                img(src='src/img/icon_timeline.png')
                |             
                h2 个人轨迹
                |             
                p &nbsp;
        |       
        .row.card-table-row.no-padding
          .col.no-padding
            .card-table-cell
              a.item.item-thumbnail(href="#/tab/user-comming")
                img(src='src/img/icon_medals.png')
                |             
                h2 获得勋章
          |         
          .col.no-padding
            .card-table-cell
              a.item.item-thumbnail(href="#/tab/user-comming")
                img(src='src/img/icon_impression.png')
                |             
                h2 书友印象
